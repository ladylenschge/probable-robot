{
  "name": "riding-school-manager",
  "version": "0.1.0",
  "private": true,
  "main": "build-electron/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tsc:electron": "tsc --project electron/tsconfig.json",
    "electron:dev": "npm run tsc:electron && concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run tsc:electron && electron-builder"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "pdfkit": "^0.17.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/pdfkit": "^0.17.1",
    "@types/react": "^19.1.8",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.example.ridingschoolmanager",
    "productName": "Riding School Manager",
    "files": [
      "build/**/*",
      "build-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
