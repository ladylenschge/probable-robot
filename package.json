{
  "name": "riding-school-manager",
  "version": "1.0.6",
  "private": true,
  "description": "A desktop application to manage a riding school.",
  "author": "ladylenschge",
  "main": "build-electron/electron.js",
  "homepage": "./",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tsc:electron": "tsc --project electron/tsconfig.json",
    "electron:dev": "npm run tsc:electron && concurrently \"npm start\" \"wait-on http-get://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run tsc:electron && electron-builder",
    "electron:publish": "npm run build && npm run tsc:electron && electron-builder --publish always"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7",
    "pdfkit": "^0.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^16.18.68",
    "@types/pdfkit": "^0.13.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "electron": "27.3.0",
    "electron-builder": "^24.9.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ladylenschge.ridingschoolmanager",
    "productName": "Reitstunden Manager",
    "icon": "assets/logo.png",
    "extraMetadata": {
      "main": "build-electron/electron.js"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Reitstunden Manager"
    },
    "files": [
      "build/**/*",
      "build-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "ladylenschge",
      "repo": "probable-robot",
      "releaseType": "release"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
